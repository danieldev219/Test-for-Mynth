{
  "compilerOptions": {
    "target": "ES6", // Compile to ES6 (supports modern JavaScript features)
    "module": "commonjs", // Use CommonJS modules (required for Node.js)
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "strict": true, // Enable all strict type-checking options
    "outDir": "./dist", // Output compiled files to the `dist` folder
    "rootDir": "./src", // Specify the root directory for source files
    "baseUrl": "./", // Base directory for module resolution
    "paths": {
      "*": ["./types/*"] // Map all imports to the `types` folder
    },
    "skipLibCheck": true, // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent file naming
  },
  "include": ["src/**/*"], // Include all files in the `src` folder
  "exclude": ["node_modules", "dist"] // Exclude `node_modules` and `dist` folders
}